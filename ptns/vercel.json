{
    "version": 2,
    "builds": [
        {
            "src": "backend/server.py",
            "use": "@vercel/python",
            "config": { "runtime": "python3.9" }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/server.py"
        }
    ],
    "env": {
        "MONGODB_URI": "@mongodb_uri"
    }
} 